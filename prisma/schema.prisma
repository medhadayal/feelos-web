// Minimal Prisma schema to persist companion data later.
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  name      String?
  createdAt DateTime @default(now())
  moods     MoodEntry[]
  messages  ConversationMessage[]
  dailyPlan DailyPlan?
}

model MoodEntry {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  mood      String
  note      String?
  createdAt DateTime @default(now())
}

model ConversationMessage {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  role      String
  content   String
  createdAt DateTime @default(now())
}

model DailyPlan {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @unique
  date       DateTime
  focusItems String[]  // simple array for quick start
  selfCare   String
}
